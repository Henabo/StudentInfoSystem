<Window x:Class="WpfApp1.StudentDropCourse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="StudentDropCourse" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="1574329800646.jpeg"/>
        </Grid.Background>
        <DataGrid HorizontalAlignment="Left" Height="255" Margin="90,135,0,0" VerticalAlignment="Top" Width="395">
            <DataGrid.Columns>
                <DataGridTextColumn Header="课程号"/>
                <DataGridTextColumn Header="课程名"/>
                <DataGridTextColumn Header="种类"/>
                <DataGridTextColumn Header="学分"/>
                <DataGridTextColumn Header="上课时间"/>
                <DataGridTextColumn Header="教师"/>
                <DataGridTextColumn Header="教室"/>
                <DataGridHyperlinkColumn Header="退课"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
